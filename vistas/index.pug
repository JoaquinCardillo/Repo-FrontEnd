html 
    head    
        title= titulo 
        link(rel="stylesheet", href="styles.css")
    body 
        div.conteiner
            form(action="/submit" method="post")
            
            label(for="email") Email :
            input(type="email" id="email" name="email")
            br
            label(for="brand") Brand:
            input(type="text" id="brand" name="brand")
            br
            label(for="model") Model:
            input(type="text" id="model" name="model")
            br
            label(for="year") Year:
            input(type="number" id="year" name="year")
            br
            
            label(for="kms") Kms:
            input(type="number" id="kms" name="kms")
            br
            
            label(for="fuel") Fuel :
            select(name="fuel")
                option(value="Petrol") Petrol
                option(value="Diesel") Diesel
                option(value="Gas") Gas 
                option(value="Electric") Electric
            br 

            label(for="price") Price (USD):
            input(type="number" id="price" name="price")
            br

            label(for="photo") Photo :
            input(type="file" id="photo" name="photo" accept="image/jpeg" required)
            br    

            label(for="description") Description :
            textarea(id="description" name="description")
            br 


            input(type="submit" value="Enviar")

    script(src="funciones.js")